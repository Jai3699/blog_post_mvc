@model Blogpost.Models.ViewModels.AddTagRequest

@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Admin Functionality</h1>
    </div>

</div>
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="from-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" required/>
            <span class="text-danger" asp-validation-for="Name"></span>
            @* asp-validation-for="Name"-->server side validation
            required-->client side validation *@
        </div>
        <div class="mb-3">
            <label class="from-label">Display Name</label>
            <input type="text" class="form-control" asp-for="DisplayName" required />
            <span class="text-danger" asp-validation-for="DisplayName"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>

 